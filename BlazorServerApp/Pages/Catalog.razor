@page "/Catalog"
@using HttpModels
@using System.Reflection.Metadata
@using System.Net.Http.Headers
@using Microsoft.AspNetCore.Http.Headers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@inject IClock _clock
@inject ICatalog _catalog
<h3>Catalog</h3>

@code {
     
}

<ul>
@foreach (var @category in _catalog.GetProducts( httpContextAccessor.HttpContext.Request.Headers.UserAgent).GroupBy(x => x.Category))
     {
          <li>
               <ul><div style="font-size: 40px;">@category.Key.Name</div>
                    @foreach (var product in category)
                    {
                         <li><img src="@product.Image" width="100" height="100"/><div>@product.Name :: @product.Price</div></li> 
                    }
               </ul></li>
     }
</ul>